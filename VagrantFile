Vagrant.configure("2") do |config|
	box = "hashicorp/precise64"

	# Docker box
	config.vm.define "docker" do |docker|
		docker.vm.box = box
		docker.vm.hostname = "docker"
		docker.vm.network "private_network", ip: "192.168.30.10"
		docker.vm.provision "docker" do |d|
			d.pull_images "tutum/rabbitmq"
			d.run "tutum/rabbitmq",
				args: "-d -p 5672:5672 -p 15672:15672 -e RABBITMQ_PASS='mypass'"
		end
	end
end
